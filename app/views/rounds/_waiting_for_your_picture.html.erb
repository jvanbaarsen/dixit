<div class="row select_picture">
  <div class="page-header">
    <h3>Choose your picture</h3>
  </div>
  <p><b>Storyfragment:</b> <%= @round.story_fragment %></p>

  <%= form_tag game_round_picture_path(@game, @round) do %>
    <div class="row">
      <% @flickr_images.each_with_index do |image, index| %>
      <div class="img-container">
        <label for="flickr_id_<%= image.id %>">
          <%= image_tag image.url_q %>
        </label><br/>
        <%= radio_button_tag "flickr_id", image.id, index == 0  %>
      </div>
      <% end %>
    </div>
    <div class="storyfragment">
      <%= submit_tag "Select picture", class: 'btn btn-primary pull-right' %>  
    </div>
  <% end %>
</div>

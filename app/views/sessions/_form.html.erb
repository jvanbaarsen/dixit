<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:notice] -%>
      <div class="alert alert-danger">
        <p><%=h flash[:notice] %></p>
      </div>
  <% end -%>
    <%= form_for :session, :url => session_path do |form| %>
      <div class="form-group">
        <div class='input-group'>
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= form.text_field :email, :type => 'email', class: 'form-control', placeholder: "email address" %>
        </div>
      </div>

      <div class="form-group">
        <div class='input-group'>
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= form.password_field :password, class: 'form-control', placeholder: "password" %>
        </div>
      </div>
      
      <div clas="form-group">
        <%= form.submit "Sign in!", class: 'btn btn-lg btn-primary btn-block' %>
      </div>

      <div class="form-group">
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t('.sign_up'), sign_up_path, class:"pull-left" %>
        <% end %>
        <%= link_to t('.forgot_password'), new_password_path, class: "pull-right" %>
      </div>
    <% end %>
  </div>
</div>

<div class="story story-<%= game.id %> panel panel-default">
  <div class="panel-heading">
    <h4><%= game.title %></h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-3"><%= image_tag "http://lorempixel.com/g/98/98/", class: 'thumbnail' %></div>
      <div class="col-xs-3"><%= image_tag "http://lorempixel.com/g/98/98/", class: 'thumbnail' %></div>
      <div class="col-xs-3"><%= image_tag "http://lorempixel.com/g/98/98/", class: 'thumbnail' %></div>
      <div class="col-xs-3"><%= image_tag "http://lorempixel.com/g/98/98/", class: 'thumbnail' %></div>
    </div>
    <div class="status-bar">
      <span>Status: <b> <%= format_game_state(game, current_user) %></b> </span>
      <%= link_to "Go there... <i class=\"fa fa-arrow-right\"></i>".html_safe, game_path(game), class: 'btn btn-default pull-right' %>
    </div>
    <div class="row col-md-12">
      <hr/>
      <b>Description: </b><%= game.description %>
    </div>
    <div class="row col-md-12 participants">
      <hr/>
      <b>Authors:</b> <%= game.authors.join(', ') %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Start new story</h3>
    <div class="well">
      <%= form_for @game do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title of your story" %>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Your super title' %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Text to invite your friends" %>
          <%= f.text_area :description, class: 'form-control', rows: 10, placeholder: 'Your super sexy invitation text' %>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.submit "Start new game", class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

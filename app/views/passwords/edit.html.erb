<%= page_header "Change your password" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p><%= t '.description' %></p>
    <%= form_for :password_reset, :url => user_password_path(@user, :token => @user.confirmation_token),
          :html => { :method => :put } do |form| %>
      <div class='form-group'>
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>

      <div class='form-group'>
        <%= form.submit "Save this password", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>

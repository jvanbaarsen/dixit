<%= page_header "Sign up" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<% if @user.errors.any? %>
    <div class="errors alert alert-danger">
      <h4><i class="icon-warning-sign"></i> Please check the fields below:</h4>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg  %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= form_for @user, html: { class: 'form-horizontal'} do |form| %>
      <div class="form-group <%= "has-error" if @user.errors[:email].present? %>">
        <%= form.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= form.text_field :email, class: 'form-control', placeholder: 'info@example.com' %>
        </div>
      </div>

      <div class="form-group <%= "has-error" if @user.errors[:password].present? %>">
        <%= form.label :password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= form.text_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= form.button "Sign up!", class: 'btn btn-lg btn-primary btn-block'  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          Allready have an account? <%= link_to t('.sign_in'), sign_in_path %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Your friends</h3>
    <div class="well">
      <%= form_tag friendships_path, method: :post, html: {class: 'form-horizontal'} do |f|  %>
        <div class="input-group">
          <%= email_field_tag :email, '', class: 'form-control', placeholder: "Your friend's email" %>
          <span class="input-group-btn">
            <%= submit_tag "Add friend", class: 'btn btn-primary' %>
          </span>
        </div>
      <% end %>
    </div>
    <%= render_flash(:error) %>
    <%= render_flash(:success) %>
    <div class="well">
      <% if @friends.count > 0  %>
        <%= render partial: 'friendships/friend', collection: @friends, as: :friend %>
      <% else %>
        <p>You don't have any friends yet.</p>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>Your friends</h3>
    <div class="well">
      <% if @friends.count > 0  %>
        <%= render partial: 'friendships/friend', collection: @friends, as: :friend %>
      <% else %>
        <p>You don't have any friends yet.</p>
      <% end %>
    </div>
  </div>
</div>
